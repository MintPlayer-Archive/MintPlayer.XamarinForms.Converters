<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.0.0</Version>
    <Description>This package contains basic Binding Converters for Xamarin.Forms.</Description>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageProjectUrl></PackageProjectUrl>
    <RepositoryUrl>https://github.com/MintPlayer/MintPlayer.XamarinForms.Converters</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ValueConverter, Xamarin Forms</PackageTags>
